@model PublisherModel


@{
    ViewBag.PageHeading = "Publisher Registration";
    ViewBag.Title = "Registration";
}
<div class="col-8 offset-2">


    <form method="post">
        <table class="table">
            <tr>
                <th>Name</th>
                <th>
                    <input asp-for="PublisherName" class="form-control" />
                </th>
            </tr>
            <tr>
                <th>Email</th>
                <th>
                    <input asp-for="EmailAddress" class="form-control" />
                </th>
            </tr>
            <tr>
                <th>Contact Number</th>
                <th>
                    <input asp-for="ContactNo" class="form-control" />
                </th>
            </tr>
            <tr>
                <td>
                    <input type="submit" value="Save" class="btn btn-primary btn-block"/>
                </td>
                <td>
                    <input type="reset" value="Clear" class="btn btn-danger btn-block"/>
                </td>
            </tr>
        </table>
        <br />
        @if (ViewBag.Message != null && ViewData["Message"] != null)
        {
            @* <ol>
                @foreach (var item in ViewBag.Message)
                {
                    <li> <span style="color:red;">@item</span></li>
                }
            </ol> *@
            <hr />
              <ol>
                @foreach (var item in (string[])ViewData["Message"])
                {
                <li> <span style="color:orange;">@item</span></li>
                }
             </ol>
        }
    </form>
</div>

