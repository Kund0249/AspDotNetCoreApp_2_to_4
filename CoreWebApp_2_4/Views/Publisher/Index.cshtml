@* @{
    Layout = "_Layout";
} *@

@{
    ViewBag.Title = "Publisher List";
    ViewBag.PageHeading = "Publisher Information";
}

<div class="col-8 offset-2">
   @*  @ViewBag.Message *@
    <table class="table">
        <thead>
            <tr>
                <th>Publisher Name</th>
                <th>Email Address</th>
                <th>Contact Number</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.PublisherName</td>
                        <td>@item.EmailAddress</td>
                        <td>@item.ContactNo</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3">
                        There is no data!
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
  

   