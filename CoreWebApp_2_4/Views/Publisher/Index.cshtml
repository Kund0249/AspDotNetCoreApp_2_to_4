@model IEnumerable<PublisherModel>
@{
    ViewBag.Title = "Publisher List";
    ViewBag.PageHeading = "Publisher Information";

    PaginationModel pagination = new PaginationModel();

    if (ViewBag.Pagenition != null)
    {
        pagination = ViewBag.Pagenition;
    }

    Pager pager = new Pager("Publisher", "Index", pagination);
}



<div class="col-8 offset-2 mb-5 mt-5">
    <partial name="_Pagination" model="@pager" />
</div>
<div class="col-8 offset-2">
    <table class="table">
        <thead>
            <tr>
                <th>Publisher Name</th>
                <th>Email Address</th>
                <th>Contact Number</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.PublisherName</td>
                        <td>@item.EmailAddress</td>
                        <td>@item.ContactNo</td>
                        <td>
                            <form asp-controller="Publisher" asp-action="Delete" method="post" asp-route-id="@item.PublisherId">
                                <div class="btn-group" role="group" aria-label="Basic example">
                                    <a asp-action="Edit" asp-controller="Publisher" asp-route-id="@item.PublisherId" class="btn btn-primary">Edit</a>
                                   @*  <button type="button" class="btn btn-sm btn-primary">Edit</button> *@
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure? want to delete @item.PublisherName permanently')">Delete</button>
                                </div>
                            </form>
                            
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4">
                        There is no data!
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>


